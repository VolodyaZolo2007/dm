<Window x:Class="dm.View.Window.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dm.View.Window"
        mc:Ignorable="d"
        Title="замена пароля"        
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Старый пароль:"/>
        <PasswordBox x:Name="OldPasswordPb" Grid.Column="2"/>
        <TextBlock x:Name="NewPasswordPb" Text="Новый пароль:" Grid.Row="2"/>
        <PasswordBox Grid.Column="2" Grid.Row="2"/>
        <TextBlock Text="Подтверждение пароля:" Grid.Row="4"/>
        <PasswordBox x:Name="AcceptPasswordPb" Grid.Column="4" Grid.Row="4"/>
        <Button Grid.Column="2" Grid.Row="6" Content="Изменить пароль"/>
    </Grid>
</Window>
